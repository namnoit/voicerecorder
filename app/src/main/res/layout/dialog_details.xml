<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="@string/details"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/image_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/details_title"
        android:layout_alignStart="@id/details_title"
        app:srcCompat="@drawable/ic_title" />

    <ImageView
        android:id="@+id/image_details_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/image_details_title"
        android:layout_alignStart="@id/details_title"
        app:srcCompat="@drawable/ic_duration" />

    <ImageView
        android:id="@+id/image_details_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/image_details_duration"
        android:layout_alignStart="@id/details_title"
        app:srcCompat="@drawable/ic_date" />

    <ImageView
        android:id="@+id/image_details_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/image_details_time"
        android:layout_alignStart="@id/details_title"
        app:srcCompat="@drawable/ic_music" />

    <ImageView
        android:id="@+id/image_details_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/image_details_format"
        android:layout_alignStart="@id/details_title"
        app:srcCompat="@drawable/ic_storage" />

    <TextView
        android:id="@+id/text_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_alignBottom="@id/image_details_title"
        android:layout_toEndOf="@id/image_details_title"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_details_title"
        android:layout_toEndOf="@id/image_details_title"
        android:text="@string/file_name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_details_file_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_details_capacity"
        android:layout_toEndOf="@id/image_details_capacity"
        android:text="@string/file_size"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_details_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_details_capacity"
        android:layout_toEndOf="@id/image_details_capacity"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_details_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_alignBottom="@id/image_details_duration"
        android:layout_toEndOf="@id/image_details_duration"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_details_file_name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_details_duration"
        android:layout_toEndOf="@id/image_details_duration"
        android:text="@string/duration"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_details_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_alignBottom="@id/image_details_time"
        android:layout_toEndOf="@id/image_details_time"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_details_file_name4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_details_time"
        android:layout_toEndOf="@id/image_details_time"
        android:text="@string/recorded_on"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_details_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_alignBottom="@id/image_details_format"
        android:layout_toEndOf="@id/image_details_format"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_details_file_name5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_details_format"
        android:layout_toEndOf="@id/image_details_format"
        android:text="@string/format"
        android:textSize="18sp" />
</RelativeLayout>
